<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NovelTextView">
        <attr name="loaded" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PageTurnView">
        <attr name="animationType" format="enum">
            <enum name="cover" value="0" />
            <enum name="simulation" value="1" />
            <enum name="translation" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BatteryView">
        <attr name="borderColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="batteryLevel" format="integer" />
        <attr name="borderWidth" format="dimension" />
        <attr name="headHeight" format="dimension" />
        <attr name="headWidth" format="dimension" />
    </declare-styleable>
</resources>