<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3dbd3"
    tools:context=".view.novelPage.PageFragment">


    <LinearLayout
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/topic_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:src="@drawable/topic_back"/>

        <TextView
            android:id="@+id/novelChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="第36章"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textColor="#9A9A9A"/>

    </LinearLayout>

    <TextView
        android:id="@+id/novelText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:lineSpacingExtra="8dp"
        android:lineSpacingMultiplier="1.2"
        android:letterSpacing="0.1"
        android:padding="16.dp"
        android:text="如果能通过反编译得到源码仍然可以通过方式1查看，但是如果该APP有加密混淆等难以反编译的情况，就只能把APK文件改为.zip后缀，然后解压文件到res资源文件夹，简单的查看XML布局。"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
