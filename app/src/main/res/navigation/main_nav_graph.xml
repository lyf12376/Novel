            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/bookShelfFragment"
        android:name="com.test.novel.view.bookShelfPage.BookShelfFragment"
        android:label="BookShelfFragment"
        tools:layout="@layout/fragment_book_shelf">
